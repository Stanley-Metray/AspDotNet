@model AspDotNet.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Oops! Something went wrong.</h2>
        </div>
        <div class="card-body">
            <p class="lead">We encountered an unexpected error while processing your request.</p>

            @if (!string.IsNullOrEmpty(Model?.Message))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error Message:</strong> @Model.Message
                </div>
            }

            @if (Model?.ShowRequestId ?? false)
            {
                <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
            }

            <a class="btn btn-primary" href="/">Return to Home</a>
        </div>
    </div>
</div>
