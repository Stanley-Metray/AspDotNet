@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome</h1>
        <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-decoration-none">building Web apps with ASP.NET Core</a>.</p>
    </div>

    <hr class="my-4" />

    <h2 class="mb-4 text-center text-primary">I Developed Functionalities</h2>

    <div class="row g-4">

        <!-- Email Service -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-danger">Email Service</h3>
                    <div class="d-flex gap-3 mt-3">
                        <a href="/email/inbox" class="btn btn-primary w-100">Inbox</a>
                        <a href="/email/send" class="btn btn-info w-100">New Email</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Access Location -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-danger">Access Location</h3>
                    <div class="d-flex gap-3 mt-3">
                        <a href="/location" class="btn btn-primary w-100">Open Form</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nested User Model -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-danger">Nested User Model Example</h3>
                    <div class="d-flex gap-3 mt-3">
                        <a href="/User/Index" class="btn btn-primary w-100">Show Users</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Image Cache -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-danger">Image Cache</h3>
                    <div class="d-flex flex-column gap-3 mt-3">
                        <a href="/Image/CacheImageUrl" class="btn btn-primary w-100">Cached Image URL</a>
                        <a href="/Image/CacheImage" class="btn btn-primary w-100">Cached Image</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- OAuth -->
        <div class="col-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-danger">OAuth - User Details</h3>

                    @if (ViewBag.Name != null && ViewBag.Name != string.Empty)
                    {
                        <div class="mt-4">
                            <h2 class="h5 text-success">Welcome, @ViewBag.Name!</h2>
                            <p><strong>Email:</strong> @ViewBag.Email</p>
                            <p><strong>Google ID:</strong> @ViewBag.GoogleId</p>
                            <a href="/Account/Logout" class="btn btn-danger mt-3">Logout</a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <a href="/Account/SignIn" class="btn btn-success">Login With Google</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

</div>
